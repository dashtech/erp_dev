                            <field name="district_id"
                                   domain="[('state_id','=',state_id)]"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_country_ward_tree_view" model="ir.ui.view">
        <field name="name">res.country.ward.tree</field>
        <field name="model">res.country.ward</field>
